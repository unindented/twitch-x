{
  "name": "twitch-ui",
  "description": "UI components for Twitch.",
  "version": "0.0.0",
  "license": "MIT",
  "main": "src/index.js",
  "private": true,
  "author": {
    "name": "Daniel Perez Alvarez",
    "email": "unindented@gmail.com",
    "url": "https://unindented.org/"
  },
  "scripts": {
    "clean:build": "shx rm -rf build",
    "clean:coverage": "shx rm -rf coverage",
    "clean": "run-p clean:*",
    "test:eslint": "eslint .",
    "test:stylelint": "stylelint \"src/**/*.css\"",
    "test:jest": "jest --coverage --config config/jest/config.json",
    "test": "run-p test:*",
    "watch:jest": "jest --watch --config config/jest/config.json",
    "watch": "run-p watch:*",
    "build:storybook": "build-storybook --config-dir config/storybook/ --static-dir node_modules/twitch-assets/build/ui/ --output-dir build/",
    "build": "run-s clean build:storybook",
    "start:server": "start-storybook --config-dir config/storybook/ --static-dir node_modules/twitch-assets/build/ui/ --port 8081",
    "start": "run-s start:server"
  },
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.6.0",
    "styled-components": "^2.1.0"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^3.2.0",
    "@storybook/addon-options": "^3.2.4",
    "@storybook/react": "^3.2.4",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-styled-components": "^1.1.7",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.4.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.2.1",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^20.0.4",
    "npm-run-all": "^4.0.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "shx": "^0.2.2",
    "storybook-addon-rtl": "^0.1.1",
    "styled-components": "^2.1.2",
    "stylelint": "^8.0.0",
    "stylelint-config-idiomatic-order": "^5.0.0",
    "stylelint-processor-styled-components": "^0.3.0",
    "twitch-assets": "*"
  }
}
