{
  "rootDir": "../../",
  "cacheDirectory": ".jest",
  "setupTestFrameworkScriptFile": "<rootDir>/config/jest/setup.js",
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "moduleNameMapper": {
    "^.+\\.css$": "<rootDir>/config/jest/styleMock.js",
    "^.+\\.(png|svg)$": "<rootDir>/config/jest/fileMock.js"
  },
  "coverageReporters": [
    "text",
    "text-summary",
    "html"
  ]
}
